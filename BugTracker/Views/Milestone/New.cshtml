@model NewMilestoneViewModel

@{
    ViewBag.Title = "New Milestone";
}

@section Styles {
    <link href="@Url.Content("~/css/typeahead-style.css")" rel="stylesheet" type="text/css" />
}

<h1>New Milestone</h1>

<div>
    <form asp-controller="Milestone" asp-action="New" method="post" class="m-3">

        <fieldset>
            <legend>New Milestone</legend>

            <!-- Title -->
            <div class="form-group">
                <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Title" class="form-control" placeholder="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" placeholder="Title" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <!-- Date picker -->
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Due Date: </label>
                <input id="datetimepickerRangeBegin" type="date" asp-for="@Model.DueDate" />
            </div>

            <!-- Hidden input fields -->
            <input id="project-id" type="hidden" asp-for="@Model.ProjectId" />
            <input id="local-bug-report-id" type="hidden" asp-for="@Model.LocalBugReportId"/>
            <input type="hidden" asp-for="@Model.CreationTime" />

            <hr />

            <h2>Bug Reports</h2>

            <!-- Typeahead input field for adding bug reports -->
            <div class="row m-3">
                <input id="Search" type="text" class="typeahead form-control" placeholder="Type bug report title / ID" autocomplete="off" spellcheck="false" />
                <input id="btnAddBugReportEntry" type="button" onclick="addRow();" value="Add Bug Report" class="btn btn-primary" />
            </div>

            <!-- Display bug reports -->
            <table>
                <thead>
                    <tr>
                        <td>Local ID</td>
                        <td>Title</td>
                    </tr>
                </thead>

                <tbody id="tbEntries">
                </tbody>
            </table>

            <hr />

            <!-- Submitting form & Cancel -->
            <div class="row mr-3">
                <div class="form-group row mr-1">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <a class="btn btn-primary" href='javascript:history.go(-1)'>Cancel</a>
                    </div>
                </div>
            </div>

        </fieldset>
    </form>
</div>

<script language="javascript" type="text/javascript">

    function addRow() {
        @{
              Model.MilestoneBugReportEntries.Add(new MilestoneBugReportEntry());
        }

        var index = $("#tbEntries").children("tr").length;
        var localBugReportId = $("#local-bug-report-id").val();
        var bugReportTitle = $("#Search").val();

        var indexCell = `<td style='display:none'><input name='MilestoneBugReportEntries.Index'
            type='hidden' value='${index}' /></td>`;

        var removeCell = `<input id='btnRemoveEntry' type='button'
            class="btn btn-danger m-1" value='Remove' onclick='removeRow(${index});' />`;

        var text = `<p class='m-1'><strong>${localBugReportId}</strong> - ${bugReportTitle}</p>`
        var bugReportCard = `<td><div class="card"><div class="card-body">
            <div class='row'>${text}${removeCell}</div>
        </div></div>`

        var localIdCell = `<td><input id='MilestoneBugReportEntries_${index}_LocalId'
            name='MilestoneBugReportEntries[${index}].LocalId' type='hidden' value='${localBugReportId}' /></td>`;
        var titleCell = `<td><input id='MilestoneBugReportEntries_${index}_Title'
            name='MilestoneBugReportEntries[${index}].Title' type='hidden' value='${bugReportTitle}' /></td>`;

        var newRow = `<tr id='trEntry${index}'>
            ${indexCell}${localIdCell}${titleCell}${bugReportCard}</tr>`;
        $("#tbEntries").append(newRow);
    }

    function removeRow(id) {
        var controlToBeRemoved = `#trEntry${id}`;
        $(controlToBeRemoved).remove();
    }
</script>

@* Typeahead script *@
<script src="@Url.Content("~/js/bug-report-search-typeahead.js")"></script>
