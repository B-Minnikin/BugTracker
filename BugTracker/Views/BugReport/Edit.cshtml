@model EditBugReportViewModel

@{
    ViewBag.Title = "Edit Bug Report";
}

<h1>Edit Bug Report</h1>

<form asp-controller="BugReport" asp-action="Edit" method="post" class="mt-3">

    <input hidden asp-for="@Model.BugReport.BugReportId" placeholder="@Model.BugReport.BugReportId"/>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input asp-for="@Model.BugReport.Title" class="form-control" rows="4" />
            <span asp-validation-for="@Model.BugReport.Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">State</label>
        <div class="input-group col-sm-10">
            <select class="custom-select" id="dropdownState" asp-for="@Model.CurrentState">
                @foreach (var state in Enum.GetValues(typeof(StateType)))
                {
                    <option value="@state">@Enum.GetName(typeof(StateType), state)</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Program Behaviour</label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.BugReport.ProgramBehaviour" class="form-control" rows="4"></textarea>
            <span asp-validation-for="@Model.BugReport.ProgramBehaviour" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Details to reproduce</label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.BugReport.DetailsToReproduce" class="form-control" rows="4"></textarea>
            <span asp-validation-for="@Model.BugReport.DetailsToReproduce" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Severity</label>
        <div class="input-group col-sm-10">
            <select asp-for="@Model.BugReport.Severity" asp-items="@Html.GetEnumSelectList<Severity>()"></select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Importance</label>
        <div class="input-group col-sm-10">
            <select class="custom-select" id="dropdownImportance" asp-for="@Model.BugReport.Importance">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>
    </div>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="hiddenCheckbox" asp-for="@Model.BugReport.Hidden">
        <label class="form-check-label" for="hiddenCheckbox">Private</label>
    </div>

    <!-- Buttons -->

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <a class="btn btn-primary" href='javascript:history.go(-1)'>Cancel</a>
        </div>
    </div>

</form>