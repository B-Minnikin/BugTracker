@model CreateBugReportViewModel

@{
    ViewBag.Title = "Create Bug Report";
}

<h1>Create Bug Report</h1>

<form asp-controller="bugreport" asp-action="createreport" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" placeholder="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ProgramBehaviour" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProgramBehaviour" class="form-control" placeholder="Program behaviour" />
            <span asp-validation-for="ProgramBehaviour" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DetailsToReproduce" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DetailsToReproduce" class="form-control" placeholder="Details to reproduce" />
            <span asp-validation-for="DetailsToReproduce" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Severity" class="col-sm-2 col-form-label"></label>
        <div class="input-group col-sm-10">
            <select class="custom-select" id="dropdownSeverity" asp-for="Severity">
                <option selected>1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>
    </div>

    @*  -- WIP !!
        severity
        importance
        hidden
        person reporting - implement user profiles
        add attachments
    *@


    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create Bug Report</button>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <a class="btn btn-primary" href='javascript:history.go(-1)'>Cancel</a>
        </div>
    </div>

</form>