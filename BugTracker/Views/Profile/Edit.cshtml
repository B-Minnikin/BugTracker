@model EditProfileViewModel

@{
    ViewBag.Title = "Edit Profile";
}

<h1>Edit Profile</h1>

<form asp-controller="Profile" asp-action="Edit" method="post" class="mt-3">

    <div class="form-group-row">
        <label class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input asp-for="@Model.User.UserName" class="form-control" rows="4" />
            <span asp-validation-for="@Model.User.UserName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <textarea asp-for="@Model.User.Email" class="form-control" placeholder="@Model.User.Email" rows="4"></textarea>
    </div>

    <div class="form-group row">
        <textarea asp-for="@Model.User.PhoneNumber" class="form-control" placeholder="@Model.User.PhoneNumber" rows="4"></textarea>
    </div>

    <input hidden asp-for="@Model.User.Id" placeholder="@Model.User.Id" />

    <!-- SAVE / CANCEL BUTTONS -->
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div class="col-sm-10">
            <a class="btn btn-primary" href='javascript:history.go(-1)'>Cancel</a>
        </div>
    </div>

</form>