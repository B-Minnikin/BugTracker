@model  SubscriptionsViewModel

@*
    List subscriptions
*@

<h1>Subscription Management</h1>

@{ 
      foreach(var report in Model.BugReports)
      {
          <div class="card">
              <div class="card-body">
                  <div class="row">
                      <a href="#">@report.Title - @report.DetailsToReproduce</a>
                      <a class="btn btn-danger  ml-auto" asp-controller="Profile" asp-action="DeleteSubscription" asp-route-bugReportId="@report.BugReportId">Delete</a>
                    </div>
              </div>
          </div>
      }
}
