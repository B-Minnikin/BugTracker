@model BugReportComment

@{ 
      ViewBag.Title = "Create Comment";
}

<h1>Create Comment</h1>

<form asp-controller="Comment" asp-action="Create" method="post" class="mt-3">

    <div class="form-group row">
        <div class="col-sm-10">
            <textarea asp-for="MainText" class="form-control" placeholder="Comment here ..." rows="5"></textarea>
            <span asp-validation-for="MainText" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="BugReportId" value="@Model.BugReportId" />

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Post Comment</button>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <a class="btn btn-primary" href='javascript:history.go(-1)'>Cancel</a>
        </div>
    </div>

</form>