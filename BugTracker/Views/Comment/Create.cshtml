@model CreateCommentViewModel

@{ 
      ViewBag.Title = "Create Comment";
}

<h1>Create Comment</h1>

<form asp-controller="Comment" asp-action="Create" method="post" class="mt-3">

    <div class="form-group row">
        <div class="col-sm-10">
            <textarea asp-for="Comment.MainText" class="form-control" placeholder="Comment here ..." rows="5"></textarea>
            <span asp-validation-for="Comment.MainText" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="Comment.BugReportId" value="@Model.Comment.BugReportId" />

    <div class="subscription-check">
        <input type="checkbox" class="form-check-input" checked="checked" asp-for="@Model.Subscribe">
        <label class="form-check-label" for="exampleCheck1">Subscribe</label>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Post Comment</button>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <a class="btn btn-primary" href='javascript:history.go(-1)'>Cancel</a>
        </div>
    </div>

</form>