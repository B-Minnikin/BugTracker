@model LinkReportsViewModel


<div class="modal fade" id="linkReportsModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">

        <form asp-controller="BugReport" asp-action="LinkReports" method="post">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Link Bug Reports</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <input id="Search" type="text" class="typeahead form-control" asp-for="@Model.LinkToBugReportLocalId" placeholder="Type bug report title / ID" autocomplete="off" spellcheck="false" />
                    <input id="project-id" type="hidden" asp-for="@Model.ProjectId" />
                    <input type="hidden" asp-for="@Model.BugReportId" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>

            </div>
        </form>

    </div>
</div>

@* Typeahead script *@
<script src="@Url.Content("~/js/bug-report-search-typeahead.js")"></script>