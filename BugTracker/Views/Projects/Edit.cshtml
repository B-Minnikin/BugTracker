@model EditProjectViewModel

@{
    ViewBag.Title = "Edit Project";
}

<h1>Edit Project</h1>

<form asp-controller="Projects" asp-action="Edit" method="post" class="mt-3">

    <div class="form-group-row">
        <label class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Project.Name" class="form-control" rows="4" />
            <span asp-validation-for="@Model.Project.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <textarea asp-for="Project.Description" class="form-control" placeholder="@Model.Project.Description" rows="4"></textarea>
    </div>

    <input hidden asp-for="@Model.Project.ProjectId" placeholder="@Model.Project.ProjectId" />

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <a class="btn btn-primary" href='javascript:history.go(-1)'>Cancel</a>
        </div>
    </div>

</form>

<a asp-controller="Projects" asp-action="DeleteProject" asp-route-id="@Model.Project.ProjectId" class="btn btn-primary">Delete Project</a>